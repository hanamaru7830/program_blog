<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <table class="table">
        <h2 class="text-center mt-5 mb-5">Blog一覧</h2>
        <thead>
          <tr>
            <th>タイトル</th>
            <th>カテゴリ</th>
            <th>本文</th>
          </tr>
        </thead>
        <tbody>
          <!--blogモデルの中のレコードを1件ずつ繰り返し取り出す-->
          <% @blogs.each do |blog| %>
          <tr>
            <td><%= blog.title %></td>
            <td><%= blog.category %></td>
            <td><%= blog.body %></td>
            <td><%= link_to "詳細", blog_path(blog.id) %></td>
            <td><%= link_to "編集", edit_blog_path(blog.id) %></td>
            <td><%= link_to "削除", blog_path(blog.id), method: :delete %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div>
        <h1 class="text-center">新規投稿</h1>
        <%= form_with model: @blog do |f| %>
          <h4>タイトル</h4>
          <%= f.text_field :title, size:"50x1" %>
          <h4>カテゴリー</h4>
          <%= f.text_field :category, size:"50x1" %>
          <h4>本文</h4>
          <%= f.text_area :body, size:"100x8" %>
          <div><%= f.submit "投稿" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>






