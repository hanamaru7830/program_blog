<h1>Blog一覧</h1>
<% @blogs.each do |blog| %>
  <p>タイトル</p>
  <%= blog.title %>
  <p>カテゴリ</p>
  <%= blog.category %>
  <p>本文</p>
  <%= blog.body %>
<% end %>

<h1>新規投稿</h1>
<%= form_with model: @blog do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>カテゴリー</h4>
  <%= f.text_field :category %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <div><%= f.submit "投稿" %></div>
<% end %>


  