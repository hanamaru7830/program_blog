<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <table class="table">
      <h2 class="text-center mt-5 mb-5">Blog search</h2>
      <thead>
        <tr>
          <th>タイトル</th>
          <th>カテゴリー</th>
          <th>本文</th>
        </tr>
      </thead>
      <tbody>
        <% @blogs.each do |blog| %>
        <tr>
          <td>
            <%= link_to blog_path(blog), local: true do %>
            <%=safe_join(blog.title.split("\n"),tag(:br))%>
            <% end %>
          </td>
          <td><%=safe_join(blog.category.split("\n"),tag(:br))%></td>
          <td><%=safe_join(blog.body.split("\n"),tag(:br))%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

