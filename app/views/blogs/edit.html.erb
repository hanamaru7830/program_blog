<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="text-center mt-3">Blog Edit</h1>
      <%= form_with model: @blog, local: true do |f| %>
        <h4>タイトル</h4>
        <%= f.text_field :title, size:"50x1"%>
        <h4>カテゴリー</h4>
        <%= f.text_field :category, size:"50x1" %>
        <h4>本文</h4>
        <%= f.text_area :body, size:"100x25" %>
        <div><%= f.submit "保存" %></div>
      <% end %>
    </div>
  </div>
</div>

